<div class="max-w-2xl mx-auto bg-white p-8 shadow-lg rounded-lg mt-6">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6">Post a New Product</h2>

  <%= form_with model: @product, local: true, html: { class: "space-y-4" } do |f| %>
    <!-- Product Name -->
    <div>
      <%= f.label :name, "Product Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200", required: true %>
    </div>

    <!-- Description -->
    <div>
      <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200 resize-none", required: true %>
    </div>

    <!-- Price -->
    <div>
      <%= f.label :price, "Price ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :price, class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200", step: "0.01", min: 0, required: true %>
    </div>

    <!-- Category -->
    <div>
      <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :category, options_for_select(["Electronics", "Fashion", "Home & Garden", "Books", "Toys & Games"]), { prompt: "Select a category" }, class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <!-- Image Upload -->
    <div>
      <%= f.label :image, "Upload Image", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.file_field :image, class: "w-full border border-gray-300 rounded-md px-4 py-2 focus:border-blue-500 focus:ring focus:ring-blue-200", accept: "image/*", required: true %>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end">
      <%= f.submit "Post Product", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>
