<h1 class="text-3xl font-semibold mb-8 text-center">Products</h1>

<div class="flex flex-wrap justify-center lg:gap-6 md:gap-4 sm:gap-2 -mx-1">
  <% @products.each do |product| %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden w-full sm:w-1/2 lg:w-1/3 max-w-[20rem] p-1"> <!-- Increased max width -->
      <!-- Image Container with Fixed Height -->
      <div class="h-52 w-full bg-gray-100">
        <img src="<%= product.image.attached? ? url_for(product.image) : '/path/to/default_image.jpg' %>" 
             alt="<%= product.name %>" 
             class="h-full w-full object-cover object-center rounded-t-lg">
      </div>

      <!-- Product Details -->
      <div class="p-3">
        <h2 class="text-lg font-semibold text-gray-800 mb-2 truncate"><%= product.name %></h2>
        <div class="flex justify-between items-center">
          <p class="text-gray-500">$<%= product.price %></p>
          <a href="<%= product_path(product) %>" class="bg-fuchsia-600 text-white rounded-lg px-3 py-1 text-center hover:bg-fuchsia-700 transition">View Product</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
