<nav class="bg-white shadow-lg mb-4">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-blue-600">Marketplace</a>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex space-x-4 items-center">
        <% if !user_signed_in? %>
          <a href="<%= new_user_session_path %>" class="text-gray-700 hover:text-blue-600">Login</a>
          <a href="<%= new_user_registration_path %>" class="text-gray-700 hover:text-blue-600">Sign Up</a>
        <% else %>
          <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
          <a href="/cart" class="text-gray-700 hover:text-blue-600">Cart</a>

          <!-- User Dropdown -->
          <div class="relative">
            <button class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 focus:outline-none">
              <span class="hidden md:block"><%= current_user.email %></span>
              <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                <span class="text-white font-bold">
                  <%= current_user.email[0].upcase %>
                </span>
              </div>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white border rounded-md shadow-lg hidden group-hover:block">
              <a href="/dashboard" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Dashboard</a>
              <a href="/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Profile</a>
              <a href="<%= destroy_user_session_path %>" class="block px-4 py-2 text-gray-700 hover:bg-gray-100" data-method="delete">Logout</a>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex md:hidden">
        <button class="text-gray-500 hover:text-gray-700 focus:outline-none focus:text-gray-700">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <% if !user_signed_in? %>
        <a href="<%= new_user_session_path %>" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Login</a>
        <a href="<%= new_user_registration_path %>" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Sign Up</a>
      <% else %>
        <a href="/" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Home</a>
        <a href="/cart" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Cart</a>

        <div class="border-t border-gray-200">
          <div class="px-4 py-3">
            <div class="text-base font-medium text-gray-800"><%= current_user.email %></div>
          </div>
          <div class="px-2 space-y-1">
            <a href="/dashboard" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Dashboard</a>
            <a href="/profile" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100">Profile</a>
            <a href="<%= destroy_user_session_path %>" class="block px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100" data-method="delete">Logout</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
