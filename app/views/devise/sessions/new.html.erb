<h2 class="text-2xl font-bold text-center mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links", class: 'text-blue-600 hover:underline transition duration-200 ease-in-out' %>
</div>